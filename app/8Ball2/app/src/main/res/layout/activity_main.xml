<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" android:id="@+id/constraintLayout">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" tools:layout_editor_absoluteY="37dp" tools:layout_editor_absoluteX="0dp"
            android:background="#535353"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:id="@+id/txtOutput"
            app:layout_constraintVertical_bias="0.734" android:textColor="#FFFFFF"/>
    <Button
            android:id="@+id/btn_click_me"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="@string/roll"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.493" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#727272"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:background="@drawable/eightball"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/ll_main_layout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_click_me" app:layout_constraintVertical_bias="0.209"
            android:id="@+id/imgBall"
            app:layout_constraintEnd_toEndOf="@+id/ll_main_layout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/ll_main_layout" app:layout_constraintHorizontal_bias="0.481"
            android:contentDescription="@string/the_magic_8_ball"/>
</android.support.constraint.ConstraintLayout>